<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
       <ul class="rooms">
  <% @rooms.each do |room| %>
    <li>
      <%= link_to room.rommid, room %>
    </li>
  <% end %>
</ul>
</div>

<div class="col-md-8">
       <ul class="histories">
  <% @histories[0,10].each do |f| %>
    <li>
      
     <%= f.action %> the room: <%=  "#{f.roomname}" %> at <%= f.created_at %>
    </li>
  <% end %>
</ul>
</div>

</div>